<p id="notice"><%= notice %></p>
<h1>Welcome to Todos App!</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.title %></td>
      <td><%= todo.description %></td>
      <td><%= todo.status %></td>
      <% if user_signed_in? && current_user.id == todo.user_id %>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<br />
<% unless user_signed_in? %> 
<%= link_to "Login Pass", pass_path%> 
<% end %>
